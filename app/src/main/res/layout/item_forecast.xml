<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="60dp"
    android:layout_height="150dp">
    <TextView
        android:id="@+id/forecase_date"
        android:text="昨天"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_width="60dp"
        android:layout_height="30dp" />
    <ImageView
        android:id="@+id/forecase_weather_icon"
        android:src="@drawable/ic_qing"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/forecase_weather"
        android:text="晴天"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_width="60dp"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/forecase_shidu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ic_shidu" />

            <TextView
                android:id="@+id/forecase_shidu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="16%"
                android:textColor="@color/colorWhite"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="30dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/forecase_fengsu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ic_fengsu" />
            <TextView
                android:id="@+id/forecase_wind_speed"
                android:text="3级"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>